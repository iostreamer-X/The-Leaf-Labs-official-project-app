        <com.example.feelsafe.DiscrollvablePathLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:padding="10dp">

            <TextView
                android:id="@+id/pathView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Exhibiting at GITEX-2014"
                android:textSize="25sp" />

        </com.example.feelsafe.DiscrollvablePathLayout>

        <com.example.feelsafe.DiscrollvableRedLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            tools:visibility="gone">

            <TextView
                android:id="@+id/redView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:padding="5dp"
                android:text="With 20 Smardworking Leaflets"
                android:textColor="@android:color/white"
                android:textSize="50sp" 
                />

            <ImageView
                android:id="@+id/redView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:alpha="0.0"
                android:src="@drawable/str"
                android:scaleX="0.1"
                android:scaleY="0.1"
                android:translationY="50dp" /> 

        </com.example.feelsafe.DiscrollvableRedLayout>

        <com.example.feelsafe.DiscrollvableGreenLayout
            android:layout_width="match_parent"
            tools:visibility="gone"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light">

            <TextView
                android:id="@+id/greenView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="50dp"
                android:fontFamily="sans-serif-light"
                android:translationY="-50dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Support us by spreading this valuable  app to everyone"
                android:textSize="36sp" />

        </com.example.feelsafe.DiscrollvableGreenLayout>

        <com.example.feelsafe.DiscrollvableLastLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/lastView1"
                android:translationX="-200dp"
                android:translationY="-200dp"
                android:alpha="0"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gitex" />

              <!--<ImageView
                android:id="@+id/lastView2"
                android:translationX="200dp"
                android:translationY="200dp"
