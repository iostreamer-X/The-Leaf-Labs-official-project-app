<com.example.feelsafe.DiscrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:discrollve="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.feelsafe.DiscrollViewContent
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="25dp"
            android:textSize="60sp"
            tools:visibility="gone"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:text=" Bringing Abundance to Life" />

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#007788"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_threshold="0.3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft|fromBottom"
            android:src="@drawable/llf"
            android:contentDescription="cheese image" />

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            discrollve:discrollve_fromBgColor="#88EE66"
            discrollve:discrollve_toBgColor="#ff4444" />
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:src="@drawable/str"
            discrollve:discrollve_translation="fromRight"
            android:contentDescription="another cheese image " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="A six months old Startup"
            android:textSize="35sp"
            android:textStyle="bold"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromBottom" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="0dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/abundance1"
            discrollve:discrollve_scaleX="true"
            discrollve:discrollve_scaleY="true"  />

